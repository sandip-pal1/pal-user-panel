<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <nav>
    <a href="/">Home</a>
    <a href="/user">All Users</a>
    <a href="/user/new">Add User</a>
    </nav>
    <table>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
        </tr>
        <%for(user of users) { %>
         <tr>
            <td><%=user.id%></td>
            <td><%=user.email%></td>
            <td><%=user.username%></td>
            <td>
            <form method="get" action="/user/<%=user.id%>/edit">
                <button>Edit Username</button>
            </form>
            </td>
            <td>
            <form method="get" action="/user/<%= user.id %>/delete">
             <button>Delete User</button>
            </form>

            </td>
         </tr>
        <% } %>  
    </table>

    

</body>
</html>

